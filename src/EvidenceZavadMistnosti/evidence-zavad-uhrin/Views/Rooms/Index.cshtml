@model List<evidence_zavad_uhrin.Models.Room>

@{
    ViewData["Title"] = "Místnosti";
}

<div class="rooms-wrapper">

    <div class="rooms-header">
        <h1 class="rooms-heading">Správa místností</h1>
    </div>

    <div class="rooms-card">

        <!-- CREATE -->
        <form method="post" asp-action="Create" class="rooms-create-form">
            <input type="text"
                   name="name"
                   class="rooms-input"
                   placeholder="Zadej název nové místnosti"
                   required />

            <input type="number"
                   name="floor"
                   class="rooms-input"
                   placeholder="Patro"
                   required />

            <input type="text"
                   name="roomDescription"
                   class="rooms-input"
                   placeholder="Popis místnosti"
                   required />

            <button type="submit" class="rooms-btn rooms-btn-primary">
                Přidat místnost
            </button>
        </form>

        <div class="rooms-table-wrapper">
            <table class="rooms-table">
                <thead>
                    <tr>
                        <th>Název místnosti</th>
                        <th class="rooms-actions-column">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr>
                            <td>
                                <form method="post" asp-action="Edit" class="rooms-edit-form">
                                    <input type="hidden" name="id" value="@room.RoomId" />

                                    <input type="text"
                                           name="name"
                                           value="@room.Name"
                                           class="rooms-input-inline" />

                                    <button type="submit"
                                            class="rooms-btn rooms-btn-save">
                                        Uložit
                                    </button>
                                </form>
                            </td>

                            <td>
                                <form method="post" asp-action="Delete">
                                    <input type="hidden" name="id" value="@room.RoomId" />

                                    <button type="submit"
                                            class="rooms-btn rooms-btn-danger">
                                        Smazat
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

